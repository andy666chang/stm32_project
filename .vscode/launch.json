{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceFolder}",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "openocd",
            "interface": "swd",
            "configFiles": [
                // "tools/openocd/interface/stlink.cfg",
                "tools/openocd/interface/cmsis-dap.cfg",
                "tools/openocd/target/stm32f1x.cfg"
            ],
            "executable": "build/test_osal.elf",
            "svdFile": "tools/svd/STM32F103.svd",

            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "port": 0,
                        "type": "console"
                    },
                    {
                        "port": 1,
                        "type": "graph",
                        "graphId": "1", 
                        "encoding": "signed",
                        "scale": 1
                    }
                ]
            },
            "graphConfig": [
                {
                    "label": "Counter",
                    "timespan": 10,
                    "type": "realtime",
                    "annotate": false,
                    "maximum": 256,
                    "minimum": 0,
                    "plots": [
                        {
                            "graphId": "1", 
                            "label": "test_data1",
                            "color": "#53753c"
                        }
                    ]
                },
            ]
        }
    ]
}